[user]
    name = Kiril Vladimirov
    email = kiril@vladimiroff.org
[github]
    user = Vladimiroff
[giggle]
    main-window-view = HistoryView
    main-window-maximized = false
    main-window-geometry = 1286x743+0+0
[gui]
    editor = vim
[color]
    ui = true
[core]
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch]
    autosetuprebase = always
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    cmd = vimdiff $LOCAL $REMOTE
    prompt = false
[pull]
    rebase = true
[push]
    default = tracking
[rerere]
    enabled = true
[alias]
    b = branch
    co = checkout
    hpush = push heroku master
    l = log --graph --all --abbrev-commit --date=relative --date-order --show-signature --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%C(bold red)%h%C(reset) - %C(cyan)(%ai)%C(reset) %C(bold green)%s%C(reset) %C(bold blue) - %an <%aE>%C(reset)%C(bold yellow)%d%C(reset)'
    locals = log --branches --not --remotes
    ls = ls-files
    st = status
    tree = log --graph --simplify-by-decoration --all --show-signature --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%C(bold red)%d%C(reset) - %C(cyan)(%ad)%C(reset) %C(bold green)%s%C(reset) %C(bold blue) - %an <%aE>%C(reset)'
    sync = !git pull && git push
    fsync = !git stash && git pull && git push && git stash pop
    root = rev-parse --show-toplevel
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
