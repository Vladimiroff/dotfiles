[user]
    name = Kiril Vladimirov
    email = kiril@vladimiroff.org
[github]
    user = Vladimiroff
[giggle]
    main-window-view = HistoryView
    main-window-maximized = false
    main-window-geometry = 1286x743+0+0
[gui]
    editor = vim
[color]
    ui = true
[core]
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch]
    autosetuprebase = always
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    cmd = vimdiff $LOCAL $REMOTE
    prompt = false
[pull]
    rebase = true
[push]
    default = tracking
[rerere]
    enabled = true
[alias]
    b = branch
    co = checkout
    hpush = push heroku master
    l = log --graph --decorate --all
    locals = log --branches --not --remotes
    ls = ls-files
    st = status
    tree = log --graph --simplify-by-decoration --pretty=format:'%d' --all
    sync = !git pull && git push
    fsync = !git stash && git pull && git push && git stash pop
    root = rev-parse --show-toplevel
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
